<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_frontend_survey"
              inherit_id="survey.assets_frontend_survey">
        <xpath expr="//link" position="after">
            <script type="text/javascript"
                    src="/survey_question_type_five_star/static/src/js/survey.js"/>
            <link href="/survey_question_type_five_star/static/src/css/survey.css"
                  rel="stylesheet" type="text/css"/>
        </xpath>
    </template>

    <template id="page" inherit_id="survey.page">
        <xpath expr="//div[@t-field='question.description']"
               position="inside">
            <t t-if="question.type == 'star_rate'">
                <t t-call="survey_question_type_five_star.star_rate"/>
            </t>
        </xpath>
    </template>

    <template id="star_rate" name="Five starts rating">
        <div class="row">
            <div class="rate">
                <label for="star5"/>
                <label for="star4"/>
                <label for="star3"/>
                <label for="star2"/>
                <label for="star1"/>
                <input type="number" step="any" class="form-control"
                       t-att-name="prefix" hidden="hidden"/>
            </div>
        </div>
    </template>
</odoo>
