<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="survey_user_input_line_binary_view_form" model="ir.ui.view">
    <field name="name">survey.user_input.line_binary.view.form</field>
    <field name="model">survey.user_input.line_binary</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="filename" string="File name" />
            <field name="value_binary_type" string="File Type" />
          </group>
        </sheet>
        <footer>
          <button
                        string="Download File"
                        class="btn btn-primary"
                        type="object"
                        name="download_binary"
                    />
        </footer>
      </form>
    </field>
  </record>
</odoo>
