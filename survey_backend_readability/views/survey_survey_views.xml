<odoo>
    <data>

        <record id="survey_form_inherited" model="ir.ui.view">
            <field name="name">survey.survey.view.form.inherit</field>
            <field name="model">survey.survey</field>
            <field name="inherit_id" ref="survey.survey_form"/>
            <field name="arch" type="xml">
                <!-- Add button to edit questions -->
                <button name="action_survey_user_input" position="before">
                    <button name="action_survey_questions"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-question-circle">
                                <field string="Questions" name="tot_questions" widget="statinfo"/>
                    </button>
                </button>

                <xpath expr="//notebook/page" position="replace">
                    <page string="Edit Pages">
                        <field name="page_ids" mode="tree" context="{'default_survey_id': active_id}" nolabel="1">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="title"/>
                                <field name="question_ids"/>
                                <button type="object" name="action_page_questions" string="Manage Questions" class="oe_read_only"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
       </record>

   </data>
</odoo>
