<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="survey_question_form">
        <field name="name">Form view for survey conditional question</field>
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form" />
        <field name="arch" type="xml">
            <field name="question_type" position="before">
                <field name="survey_id" invisible="1" readonly="1" required="0" />
                <field name="page_id" invisible="1" required="0" />
            </field>
            <xpath expr="//group/field[@name='constr_mandatory']/.." position="after">
                <group name="conditional" colspan="4" cols="2">
                    <field
                        name="is_conditional"
                        attrs="{'readonly':[('survey_id', '=', False)]}"
                    />
                    <field
                        name="triggering_question_id"
                        options="{'no_create': True}"
                        domain="[('survey_id', '=', survey_id)]"
                        attrs="{'required': [('is_conditional', '=', True)], 'invisible':[('is_conditional','!=',True)]}"
                    />
                    <field name="triggering_question_type" invisible="1" />
                    <field
                        name="triggering_answer_id"
                        options="{'no_create': True}"
                        domain="[('question_id', '=', triggering_question_id)]"
                        attrs="{'required': [('is_conditional', '=', True), ('triggering_question_type', 'in', ('simple_choice', 'multiple_choice'))], 'invisible':[('is_conditional','!=',True), ('triggering_question_id','!=',True)]}"
                    />
                    <field
                        name="conditional_minimum_value"
                        options="{'no_create_edit': True,}"
                        domain="[('question_id','=',triggering_question_id)]"
                        attrs="{'required': [('is_conditional', '=', True), ('triggering_question_type', '=', ('numerical_box'))], 'invisible':['|', '|', '|', ('is_conditional', '=', False), ('triggering_question_id', '=', False), ('triggering_question_type', '!=', ('numerical_box'))]}"
                    />
                    <field
                        name="conditional_maximum_value"
                        options="{'no_create_edit': True,}"
                        domain="[('question_id','=',triggering_question_id)]"
                        attrs="{'required': [('is_conditional', '=', True), ('triggering_question_type', '=', ('numerical_box'))], 'invisible':['|', '|', '|', ('is_conditional', '=', False), ('triggering_question_id', '=', False), ('triggering_question_type', '!=', ('numerical_box'))]}"
                    />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
